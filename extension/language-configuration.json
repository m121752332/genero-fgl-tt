{
    "comments": {
        "lineComment": "#",
        "blockComment": [ "{", "}" ]
    },
    "brackets": [
        [ "{", "}" ],
        [ "[", "]" ],
        [ "(", ")" ]
    ],
    "autoClosingPairs": [
        { "open": "'", "close": "'", "notIn": [ "string", "comment" ] },
        { "open": "\"", "close": "\"", "notIn": [ "string" ] },
        { "open": "`", "close": "`", "notIn": [ "string", "comment" ] }
    ],
    "indentationRules": {
        "increaseIndentPattern": "(^((PUBLIC|PRIVATE|public|private)\\s)?(FUNCTION|function)\\b)|(^(MAIN|main)\\b)|(^\\s*(IF|WHILE|FOR|FOREACH|DISPLAY ARRAY|INPUT|if|while|for|foreach|display array|input)\\b)|((?<!(END|end)\\s)(RECORD|record|INTERFACE|interface)\\b)",
        "decreaseIndentPattern": "^\\s+(end|END)"
    }
}
