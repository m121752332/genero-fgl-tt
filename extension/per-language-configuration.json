{
    "comments": {
      "lineComment": "#",
      "lineComment": "--",
      "blockComment": [ "{", "}" ]
    },
    "brackets": [
        [ "{", "}" ],
        [ "(", ")" ],
        [ "[", "]" ],
        [ "<", ">" ]
    ],
    "colorizedBracketPairs": [
        [ "(", ")" ]
    ],
    "autoClosingPairs": [
        { "open": "[", "close": "]" },
        { "open": "'", "close": "'", "notIn": [ "string", "comment" ] },
        { "open": "\"", "close": "\"", "notIn": [ "string" ] },
        { "open": "`", "close": "`", "notIn": [ "string", "comment" ] }
    ],
    "indentationRules": {
        "increaseIndentPattern": "^\\s*(HBOX|VBOX|GROUP|TOPMENU|TOOLBAR|ACTIONDEFAULTS)\\b",
        "decreaseIndentPattern": "^\\s+(END)\\b"
    }
}
